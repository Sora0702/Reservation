<div class="Displaywrapper">
  <div class="Displaycontainer">
    <ul>
      <% if @room.room_image.attached? %>
        <li><%= image_tag @room.room_image %></li>
      <% else %>
        <li><img src="/assets/default.room.png" alt="施設デフォルト画像" class="" width="40px" height="40px"></li>
      <% end %>
      <li><%= @room.room_name %></li>
      <li><%= @room.room_introduction %></li>
      <li><%= @room.price %></li>
      <% if current_user.id == @room.user_id %>
        <%= link_to "施設情報の編集", [:edit, @room] %>
      <% end %>
    </ul>
  </div>
  <li><%= link_to "前の画面に戻る", :back, class: "Width-100 btn btn-secondary Btn-actions" %>
</div>